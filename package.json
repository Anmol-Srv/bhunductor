{
  "name": "bhunductor",
  "version": "1.0.0",
  "description": "A visually stunning UI layer for Claude CLI",
  "main": "main/index.js",
  "scripts": {
    "postinstall": "electron-rebuild",
    "start": "npm run build && electron .",
    "dev": "NODE_ENV=development webpack --mode development && NODE_ENV=development electron .",
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "claude",
    "ai",
    "developer-tools"
  ],
  "author": "Anmol",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "lucide-react": "^0.563.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.9.0",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "style-loader": "^3.3.4",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.bhunductor.app",
    "productName": "Bhunductor",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ]
    },
    "files": [
      "main/**/*",
      "renderer/dist/**/*",
      "shared/**/*"
    ]
  }
}
