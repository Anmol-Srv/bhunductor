{
  "name": "bhunductor",
  "version": "1.0.0",
  "description": "A visually stunning UI layer for Claude CLI",
  "main": "main/index.js",
  "scripts": {
    "postinstall": "electron-rebuild",
    "start": "npm run build && electron .",
    "devi": "concurrently -k \"webpack --mode development --watch\" \"sleep 2 && NODE_ENV=development electronmon .\"",
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "claude",
    "ai",
    "developer-tools"
  ],
  "author": "Anmol",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.49",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@monaco-editor/react": "^4.7.0",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "better-sqlite3": "^11.7.0",
    "copy-webpack-plugin": "^13.0.1",
    "fastify": "^4.29.1",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.563.0",
    "marked": "^17.0.1",
    "monaco-editor": "^0.55.1",
    "node-pty": "^1.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "concurrently": "^9.2.1",
    "css-loader": "^6.9.0",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "electronmon": "^2.0.4",
    "style-loader": "^3.3.4",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.bhunductor.app",
    "productName": "Bhunductor",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ]
    },
    "files": [
      "main/**/*",
      "renderer/dist/**/*",
      "shared/**/*"
    ]
  }
}
